{
  "compilerOptions": {
      "paths": {
        "@src/*": ["src/*"]
      },
      "moduleResolution": "NodeNext",
      "target": "ES2017",
      "module": "ES6",
      "baseUrl": ".",
      "outDir": "./build",
      "allowJs": true,
      "checkJs": false,
      "isolatedModules": true
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js"]
}
  